{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}: Reset your password{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
             <div class="col-md-8 col-xl-6">
                <h1 class="h3 mb-3">Reset your password</h1>

                {{ form_start(passwordResetForm) }}
                    {{ form_row(passwordResetForm.plainPassword) }}
                    <button type="submit" class="btn btn-primary mt-2 w-100">Reset password</button>
                {{ form_end(passwordResetForm) }}
             </div>
        </div>
    </div>
{% endblock %}
