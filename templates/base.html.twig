<!DOCTYPE html>
<html class="h-100">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Polly{% endblock %}</title>
        <link rel="icon" href="{{ asset('/favicon.ico') }}" sizes="48x48" >
        <link rel="icon" href="{{ "data:image/svg+xml,#{ include('svg/polly_icon.svg.twig') }" }}" sizes="any">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="d-flex flex-column h-100 font-ibm-plex-sans">
        {{ include('_partials/_header.html.twig') }}

        <main>
            {{ include('_partials/_flash_messages.html.twig') }}
            {% block body %}{% endblock %}
        </main>

        {{ include('_partials/_footer.html.twig') }}
    </body>
</html>
