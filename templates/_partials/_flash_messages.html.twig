{% set hasFlashMessages = app.session.flashBag.peekAll is not empty %}

<div class="container {{ hasFlashMessages ? 'mt-4' : '' }}">
    {% if hasFlashMessages %}
        {% for type, messages in app.session.flashBag.all %}
            {% for message in messages %}
                <div class="{{ "#{ alert_class(type) } text-center" }}" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    {% endif %}
</div>
