{% set hasFlashMessages = app.session.flashBag.peekAll is not empty %}

{% if hasFlashMessages %}
    <div class="container mt-4">
        {% for type, messages in app.session.flashBag.all %}
            {% for message in messages %}
                <div class="{{ "#{ alert_class(type) } text-center" }}" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>
{% endif %}
